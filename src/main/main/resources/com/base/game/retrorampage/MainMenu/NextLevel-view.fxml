<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<VBox id="mainMenu" alignment="CENTER" prefHeight="545.0" prefWidth="463.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.base.game.retrorampage.MainMenu.NextLevelController">

    <!-- Include your stylesheets here -->
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <!-- Main Menu Label -->
    <Label fx:id="mainMenuLabel" styleClass="main-title" text="Level Complete" />

    <!-- Total Enemies Killed Label -->
    <Label fx:id="totalEnemiesLabel" styleClass="main-title" text="Enemies Killed: " />

    <!-- Horizontal Box for Buttons -->
    <HBox alignment="CENTER" spacing="30">
        <!-- Main Menu Button -->
        <Button onAction="#onMainMenuButtonClick" styleClass="menu-button" text="Main Menu" />
        <!-- Next Level Button -->
        <Button onAction="#onNextLevelButtonClick" styleClass="menu-button" text="Next Level" />
    </HBox>

</VBox>
