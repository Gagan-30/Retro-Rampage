<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox id="mainMenu" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="605.0" prefWidth="600.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.base.game.retrorampage.MainMenu.KeybindController">

    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>

    <Label fx:id="mainMenuLabel" prefHeight="66.0" prefWidth="192.0" styleClass="main-title" text="Keybinds"/>
    <GridPane alignment="CENTER" prefHeight="387.0" prefWidth="600.0">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER"/>
            <ColumnConstraints halignment="CENTER"/>
            <ColumnConstraints halignment="CENTER"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="60.0"/>
            <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="60.0"/>
            <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="60.0"/>
            <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="60.0"/>
            <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="60.0"/>
            <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="60.0"/>
        </rowConstraints>
        <children>
            <Label fx:id="mainMenuLabel1" styleClass="grid-title" text="Move Up" textAlignment="CENTER"
                   GridPane.rowIndex="1"/>
            <Label fx:id="mainMenuLabel2" styleClass="grid-title" text="Move Down" textAlignment="CENTER"
                   GridPane.rowIndex="2"/>
            <Label fx:id="mainMenuLabel3" styleClass="grid-title" text="Move Left" textAlignment="CENTER"
                   GridPane.rowIndex="3"/>
            <Label fx:id="mainMenuLabel4" styleClass="grid-title" text="Move Right" textAlignment="CENTER"
                   GridPane.rowIndex="4"/>
            <Label fx:id="mainMenuLabel41" styleClass="grid-title" text="Shoot" textAlignment="CENTER"
                   GridPane.rowIndex="5"/>
            <Label fx:id="mainMenuLabel11" prefHeight="35.0" prefWidth="109.0" styleClass="grid-title" text="Action:"
                   textAlignment="CENTER"/>
            <Label fx:id="mainMenuLabel12" prefHeight="35.0" prefWidth="154.0" styleClass="grid-title" text="Keybind 1"
                   GridPane.columnIndex="1"/>
            <Label fx:id="mainMenuLabel121" prefHeight="35.0" prefWidth="154.0" styleClass="grid-title" text="Keybind 2"
                   GridPane.columnIndex="2"/>
            <Button fx:id="moveUp1Button" mnemonicParsing="false" onAction="#onActionButtonClick" prefHeight="20.0"
                    prefWidth="159.0" styleClass="keybind-button" text="MoveUp1" GridPane.columnIndex="1"
                    GridPane.rowIndex="1"/>
            <Button fx:id="moveUp2Button" mnemonicParsing="false" onAction="#onActionButtonClick" prefHeight="20.0"
                    prefWidth="159.0" styleClass="keybind-button" text="MoveUp2" GridPane.columnIndex="2"
                    GridPane.rowIndex="1"/>
            <Button fx:id="moveDown1Button" mnemonicParsing="false" onAction="#onActionButtonClick" prefHeight="20.0"
                    prefWidth="159.0" styleClass="keybind-button" text="MoveDown1" GridPane.columnIndex="1"
                    GridPane.rowIndex="2"/>
            <Button fx:id="moveDown2Button" mnemonicParsing="false" onAction="#onActionButtonClick" prefHeight="20.0"
                    prefWidth="159.0" styleClass="keybind-button" text="MoveDown2" GridPane.columnIndex="2"
                    GridPane.rowIndex="2"/>
            <Button fx:id="moveLeft1Button" mnemonicParsing="false" onAction="#onActionButtonClick" prefHeight="20.0"
                    prefWidth="159.0" styleClass="keybind-button" text="MoveLeft1" GridPane.columnIndex="1"
                    GridPane.rowIndex="3"/>
            <Button fx:id="moveRight1Button" mnemonicParsing="false" onAction="#onActionButtonClick" prefHeight="20.0"
                    prefWidth="159.0" styleClass="keybind-button" text="MoveRight1" GridPane.columnIndex="1"
                    GridPane.rowIndex="4"/>
            <Button fx:id="moveLeft2Button" mnemonicParsing="false" onAction="#onActionButtonClick" prefHeight="20.0"
                    prefWidth="159.0" styleClass="keybind-button" text="MoveLeft2" GridPane.columnIndex="2"
                    GridPane.rowIndex="3"/>
            <Button fx:id="moveRight2Button" mnemonicParsing="false" onAction="#onActionButtonClick" prefHeight="20.0"
                    prefWidth="159.0" styleClass="keybind-button" text="MoveRight2" GridPane.columnIndex="2"
                    GridPane.rowIndex="4"/>
            <Button fx:id="shoot1Button" mnemonicParsing="false" onAction="#onActionButtonClick" prefHeight="20.0"
                    prefWidth="159.0" styleClass="keybind-button" text="Shoot1" GridPane.columnIndex="1"
                    GridPane.rowIndex="5"/>
            <Button fx:id="shoot2Button" mnemonicParsing="false" onAction="#onActionButtonClick" prefHeight="20.0"
                    prefWidth="159.0" styleClass="keybind-button" text="Shoot2" GridPane.columnIndex="2"
                    GridPane.rowIndex="5"/>

        </children>
    </GridPane>

    <Button alignment="CENTER" onAction="#onReturnButtonClick" prefWidth="250.0" styleClass="menu-button"
            text="Return"/>
</VBox>
