<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import java.net.URL?>

<VBox id="mainMenu" alignment="CENTER" spacing="20"
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.base.game.retrorampage.DifficultySelectionController">

    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>

    <Button onAction="#selectEasy" text="Easy" styleClass="menu-button"/>
    <Button onAction="#selectMedium" text="Medium" styleClass="menu-button"/>
    <Button onAction="#selectHard" text="Hard" styleClass="menu-button"/>
    <Button onAction="#selectSurvivor" text="Survivor" styleClass="menu-button"/>
    <Button onAction="#selectGrounded" text="Grounded" styleClass="menu-button"/>
    <HBox spacing="20" alignment="BOTTOM_LEFT">
        <Button onAction="#selectReturn" text="Return" styleClass="menu-button"/>
    </HBox>
</VBox>
