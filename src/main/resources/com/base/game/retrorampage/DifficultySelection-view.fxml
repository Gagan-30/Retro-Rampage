<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import java.net.URL?>

<?import javafx.scene.control.Label?>
<VBox id="mainMenu" alignment="CENTER" spacing="20"
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.base.game.retrorampage.DifficultySelectionController">

    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>

    <Label fx:id="difficultyLabel" text="Select Difficulty" styleClass="main-title"/>

    <Button onAction="#onButtonClickEasy" text="Easy" styleClass="menu-button"/>
    <Button onAction="#onButtonClickMedium" text="Medium" styleClass="menu-button"/>
    <Button onAction="#onButtonClickHard" text="Hard" styleClass="menu-button"/>
    <Button onAction="#onButtonClickSurvivor" text="Survivor" styleClass="menu-button"/>
    <Button onAction="#onButtonClickGrounded" text="Grounded" styleClass="menu-button"/>
    <HBox spacing="20" alignment="BOTTOM_LEFT">
        <Button onAction="#onButtonClickReturn" text="Return" styleClass="menu-button"/>
    </HBox>
</VBox>
