<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.base.game.retrorampage.DifficultySelectionController">

    <Button onAction="#selectEasy" text="Easy"/>
    <Button onAction="#selectMedium" text="Medium"/>
    <Button onAction="#selectHard" text="Hard"/>
    <Button onAction="#selectSurvivor" text="Survivor"/>
    <Button onAction="#selectGrounded" text="Grounded"/>
    <HBox spacing="20" alignment="BOTTOM_LEFT">
        <Button onAction="#selectReturn" text="Return"/>
    </HBox>
</VBox>
