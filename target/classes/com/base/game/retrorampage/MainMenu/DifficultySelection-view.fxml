<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<?import java.net.URL?>

<?import javafx.scene.control.Label?>
<VBox id="mainMenu" alignment="CENTER" spacing="20"
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.base.game.retrorampage.MainMenu.DifficultySelectionController">

    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>

    <Label text="Select Difficulty" styleClass="main-title"/>

    <Button onAction="#onEasyButtonClick" text="Easy" styleClass="menu-button"/>
    <Button onAction="#onMediumButtonClick" text="Medium" styleClass="menu-button"/>
    <Button onAction="#onHardButtonClick" text="Hard" styleClass="menu-button"/>
    <Button onAction="#onSurvivorButtonClick" text="Survivor" styleClass="menu-button"/>
    <Button onAction="#onGroundedButtonClick" text="Grounded" styleClass="menu-button"/>
    <Button onAction="#onReturnButtonClick" text="Return" styleClass="menu-button"/>
</VBox>
